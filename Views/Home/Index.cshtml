@{
    ViewData["Title"] = "Home Page";
    string code = null;
    string result = null;
}

<div class="text-center" id="contentDiv">
        <h1 class="display-4">Удаление пустых папок</h1>
    <p><h2><a href="https://oauth.yandex.ru/authorize?response_type=code&client_id=829dcf0d2cc248159d4477d3dcc56f06">Перейдите по ссылке и введите код</a></h2></p>
    <form id="myform" class="form-control" asp-controller="Home" asp-action="Run">
            <label><h2>Введите код</h2></label>
        <input type="text" class="form-control" id="inpVal" asp-for="@code" />
        <br />
        <input type="submit" class="btn btn-primary" value="Выполнить" onclick='waitFunc()'/>
        <br />
    </form>
</div>

@section Scripts{
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script>
        function waitFunc() {
            document.getElementById('contentDiv').style.display = 'none';
        }
</script>
}